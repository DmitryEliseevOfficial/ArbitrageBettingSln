<Window x:Class="Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Updater"
        mc:Ignorable="d"
        Title="Установка обновлений:" Height="256" Width="525" FontFamily="/Updater;component/#Archangelsk"
        WindowState="Normal" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" Icon="Updater_Ico_svg.ico">
    <Window.Resources>


    </Window.Resources>
    <Grid Background="#34373A">
        <Image Source="vilka.png" Width="107" Height="107" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Foreground="White" FontSize="36" FontWeight="Bold">Идет Обновление. Ожидайте</Label>
            <ProgressBar x:Name="prgLoad" Height="10" IsIndeterminate="True" Margin="0,15,0,0" Background="#FF2B2C2F" BorderBrush="{x:Null}" Foreground="#FF0ca769" ></ProgressBar>
            <Label x:Name="lblStatus" Foreground="White" Margin="0,25,0,0" FontSize="16">Загрузка файлов</Label>
        </StackPanel>
    </Grid>
</Window>
